    maxZoom: 18,
    id: 'mapbox/streets-v11',
    tileSize: 512,
    zoomOffset: -1,
    accessToken: 'pk.eyJ1IjoiY29sbW9rZWVmZmUiLCJhIjoiY2t0YzQ1dXprMDlobjJ2bWF0ZmtsMGZraCJ9.IM8nV-GZzpbfFu0HOzuRQw'
}).addTo(mymap);
  {{#each category.woods}}
  var marker = L.marker([{{latitude}}, {{longitude}}]).addTo(mymap).bindPopup('{{title}}');

      {{/each}}


</script>
</section>